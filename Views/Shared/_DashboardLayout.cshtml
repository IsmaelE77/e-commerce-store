<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/shared.css" />
</head>
<body>
    <header>
      <a asp-controller="Home" asp-action="Index">
        <div class="logo">Lambda Store</div>
      </a>
      <div class="hamburger">
        <div></div>
        <div></div>
        <div></div>
      </div>
      <nav>
        <ul>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Dashboard" asp-action="Products">Products</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Dashboard" asp-action="Categories">Categories</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Dashboard" asp-action="Orders">Orders</a>
            </li>
            @if(User.Identity.IsAuthenticated){
                <li class="nav-item">
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        <button class="btn btn-danger" type="submit">Logout</button>
                    </form>
                </li>
            }else{
                <li class="nav-item">
                    <a class="btn btn-primary" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                </li>
            }
        </ul>
      </nav>
    </header>
    <script>
        hamburger = document.querySelector(".hamburger");
        hamburger.onclick = function(){
        navBar = document.querySelector("nav");
        navBar.classList.toggle("checked");
        navBar = document.querySelector(".top-filter");
        navBar.classList.toggle("top-filter-static");
        }
    </script> 


    @RenderBody()




</body>
</html>
