@model e_commerce_store.ViewModels.CheckOutViewModel
@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Checkout";
}

<div class="container">
    <div class="wrapper">
        <form asp-action="Checkout" asp-controller="Cart">
            <h1>Checkout</h1>
            <div class="form-group">
                <div class="input-box">
                    <input asp-for="UserName" type="text" placeholder="username" required readonly>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                @Html.HiddenFor(model => model.UserName)
            </div>

            <div class="form-group">
                <div class="input-box">
                    <input asp-for="UserEmail" type="email" placeholder="email" required readonly>
                    <span asp-validation-for="UserEmail" class="text-danger"></span>
                </div>
                @Html.HiddenFor(model => model.UserEmail)
            </div>

            <div class="form-group">
                <div class="input-box">
                    <input asp-for="PhoneNumber" type="tel" placeholder="phone number" required>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="input-box">
                    <input asp-for="FirstName" type="text" placeholder="first name" required>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="input-box">
                    <input asp-for="LastName" type="text" placeholder="last name" required>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="input-box">
                    <input asp-for="City" type="text" placeholder="city" required>
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="input-box">
                    <input asp-for="Address1" type="text" placeholder="address line 1" required>
                    <span asp-validation-for="Address1" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="input-box">
                    <input asp-for="Address2" type="text" placeholder="address line 2">
                    <span asp-validation-for="Address2" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="input-box">
                    <input asp-for="TotalPrice" type="text" placeholder="toatlPrice" required readonly>
                    <span asp-validation-for="TotalPrice" class="text-danger"></span>
                </div>
                @Html.HiddenFor(model => model.TotalPrice)
            </div>

            <button type="submit" class="btn">Place Order</button>
        </form>
    </div>
</div>

